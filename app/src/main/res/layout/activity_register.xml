<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/safety_green"
    tools:context=".RegisterActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/reg_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/centurygothicbold"
            android:text="SIGN UP"
            android:textColor="#EBEAEA"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/reg_et_name1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/rectangle_vector"
            android:fontFamily="@font/centurygothicitalics"
            android:padding="7dp"
            android:textColor="#9C9C9C"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_textView1" />

        <EditText
            android:id="@+id/reg_et_name2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle_vector"
            android:fontFamily="@font/centurygothicitalics"
            android:padding="7dp"
            android:textColor="#9C9C9C"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_et_name1" />

        <EditText
            android:id="@+id/reg_et_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle_vector"
            android:fontFamily="@font/centurygothicitalics"
            android:inputType="textEmailAddress"
            android:padding="7dp"
            android:textColor="#9C9C9C"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_et_name2" />

        <EditText
            android:id="@+id/reg_et_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle_vector"
            android:fontFamily="@font/centurygothicitalics"
            android:inputType="textPassword"
            android:padding="7dp"
            android:textColor="#9C9C9C"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_et_email" />

        <EditText
            android:id="@+id/reg_et_cpassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle_vector"
            android:fontFamily="@font/centurygothicitalics"
            android:inputType="textPassword"
            android:padding="7dp"
            android:textColor="#9C9C9C"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_et_password" />

        <EditText
            android:id="@+id/reg_et_contact"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle_vector"
            android:fontFamily="@font/centurygothicitalics"
            android:inputType="number"
            android:padding="7dp"
            android:textColor="#9C9C9C"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_et_cpassword" />

        <TextView
            android:id="@+id/reg_next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/centurygothic"
            android:text="NEXT"
            android:textColor="#EBEAEA"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_et_contact"
            app:layout_constraintVertical_bias="0.7" />

        <TextView
            android:id="@+id/reg_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:fontFamily="@font/centurygothicitalics"
            android:text="First Name"
            android:textColor="#9C9C9C"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/reg_et_name1"
            app:layout_constraintStart_toStartOf="@+id/reg_et_name1" />

        <TextView
            android:id="@+id/reg_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:fontFamily="@font/centurygothicitalics"
            android:text="Last Name"
            android:textColor="#9C9C9C"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/reg_et_name2"
            app:layout_constraintStart_toStartOf="@+id/reg_et_name1" />

        <TextView
            android:id="@+id/reg_textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:fontFamily="@font/centurygothicitalics"
            android:text="E-mail ID"
            android:textColor="#9C9C9C"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/reg_et_email"
            app:layout_constraintStart_toStartOf="@+id/reg_et_name1" />

        <TextView
            android:id="@+id/reg_textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:fontFamily="@font/centurygothicitalics"
            android:text="Password"
            android:textColor="#9C9C9C"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/reg_et_password"
            app:layout_constraintStart_toStartOf="@+id/reg_et_name1" />


        <TextView
            android:id="@+id/reg_textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:fontFamily="@font/centurygothicitalics"
            android:text="Confrim Password"
            android:textColor="#9C9C9C"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/reg_et_cpassword"
            app:layout_constraintStart_toStartOf="@+id/reg_et_name1" />


        <TextView
            android:id="@+id/reg_textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:fontFamily="@font/centurygothicitalics"
            android:text="Contact Number"
            android:textColor="#9C9C9C"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/reg_et_contact"
            app:layout_constraintStart_toStartOf="@+id/reg_et_name1" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/reg_next2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/centurygothic"
            android:text="NEXT"
            android:textColor="#EBEAEA"
            android:textSize="22sp"
            android:layout_margin="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/reg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:fontFamily="@font/centurygothic"
            android:text="BACK"
            android:textColor="#EBEAEA"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/reg_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:fontFamily="@font/centurygothic"
            android:text="SKIP"
            android:textColor="#EBEAEA"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/reg_textView8"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/centurygothic"
            android:text="Alert the fire deparment automatically in case of fire"
            android:textColor="#EBEAEA"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_skip" />


        <TextView
            android:id="@+id/reg_textView9"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/centurygothic"
            android:text="Alert my neighbours in case of a fire at my house"
            android:textColor="#EBEAEA"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_textView8" />

        <TextView
            android:id="@+id/reg_textView10"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/centurygothic"
            android:text="Alert me in case of a fire in my neighbourhood"
            android:textColor="#EBEAEA"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_textView9" />



        <TextView
            android:id="@+id/reg_textView11"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/centurygothic"
            android:text="Alert my emergency contacts in case a fire at my house"
            android:textColor="#EBEAEA"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_textView10" />

        <TextView
            android:id="@+id/reg_textView12"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/centurygothicitalics"
            android:text="Tap to add/view emergency contacts"
            android:textColor="#9C9C9C"
            android:textSize="14.5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_textView11" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/reg_textView8"
            app:layout_constraintStart_toEndOf="@+id/reg_textView8"
            app:layout_constraintTop_toTopOf="@+id/reg_textView8" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/reg_textView9"
            app:layout_constraintStart_toEndOf="@+id/reg_textView9"
            app:layout_constraintTop_toTopOf="@+id/reg_textView9" />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/reg_textView10"
            app:layout_constraintStart_toEndOf="@+id/reg_textView10"
            app:layout_constraintTop_toTopOf="@+id/reg_textView10" />

        <Switch
            android:id="@+id/switch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/reg_textView11"
            app:layout_constraintStart_toEndOf="@+id/reg_textView11"
            app:layout_constraintTop_toTopOf="@+id/reg_textView11" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>